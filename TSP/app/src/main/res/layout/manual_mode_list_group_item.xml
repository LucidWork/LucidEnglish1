<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_shade_1"
        android:gravity="center_vertical">

        <View
            android:id="@+id/imgSelected"
            android:layout_width="8dp"
            android:background="@color/yellow"
            android:visibility="gone"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/chkMenuSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" />

        <com.thesejongproject.customviews.SmartTextView
            android:id="@+id/txtMenuItemCaption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgMainArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrVocalView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_shade_2"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="32dp">

            <View
                android:id="@+id/imgVerbSelected"
                android:layout_width="8dp"
                android:background="@color/yellow"
                android:visibility="gone"
                android:layout_height="match_parent" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chkVocabLevels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.thesejongproject.customviews.SmartTextView
                android:id="@+id/txtVocabLevels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/vocab_levels"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imgVocabArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrVocabChildView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrTenseView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_shade_2"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="32dp">

            <View
                android:id="@+id/imgTenseSelected"
                android:layout_width="8dp"
                android:visibility="gone"
                android:background="@color/yellow"
                android:layout_height="match_parent" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/chkTenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.thesejongproject.customviews.SmartTextView
                android:id="@+id/txtTenses"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="@string/tenses"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imgTenseArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrTensesChildView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />
</LinearLayout>