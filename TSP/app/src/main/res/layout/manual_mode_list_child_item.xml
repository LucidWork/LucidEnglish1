<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_shade_3"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="44dp">

        <View
            android:id="@+id/imgSelected"
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@color/yellow"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/chkSubMenuSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/lnrMenuItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp">

            <com.thesejongproject.customviews.SmartTextView
                android:id="@+id/txtMenuItemCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.thesejongproject.customviews.SmartTextView
                android:id="@+id/txtMenuItemDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgSubMenuArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrChildView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
</LinearLayout>